<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SeekbarTheme" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMarkTint">@color/white</item>
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:progressTint">@color/white</item>
        <item name="thumbTint">@color/white</item>

    </style>
</resources>

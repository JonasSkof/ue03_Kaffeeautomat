<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <item android:state_pressed="true">
 <shape>
     <gradient android:startColor="@color/colorPrimary2" android:endColor="@color/colorAccent2"
    android:type="linear" android:gradientRadius="5dp" android:angle="180"/>
     <corners android:radius="40dp"/>
 </shape>
</item>

    <item android:state_hovered="true">
        <shape>
            <gradient android:startColor="@color/colorPrimary2" android:endColor="@color/colorAccent2"
                android:type="linear" android:gradientRadius="5dp" android:angle="180"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="@color/colorPrimary" android:endColor="@color/colorAccent"
                android:type="linear" android:gradientRadius="5dp" android:angle="180"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>



</selector>